<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/normalize.css" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title><%= title %></title>
  </head>
  <body class="flex min-h-[100dvh] flex-col">
    <%- include('header') -%>
    <main
      class="flex min-h-screen flex-1 flex-col items-center justify-center gap-4 p-4"
    >
      <% if (typeof messageFailure !== 'undefined' && messageFailure.length > 0)
      { %>
      <div class="max-w-[300px]"><%= messageFailure %></div>
      <% } %>
      <div
        class="rounded-xl bg-gray-200 px-10 py-6 shadow-sm shadow-gray-300 md:min-w-[350px]"
      >
        <h1 class="mb-4 text-center text-2xl font-bold">Sign Up</h1>
        <form action="" method="POST">
          <div class="mb-3 flex flex-col gap-4">
            <div class="flex flex-col gap-2 text-gray-700">
              <label
                class="after:italic after:content-['(Required)']"
                for="first_name"
                >First Name
              </label>
              <input
                class="rounded-md border-none p-2 focus:border-solid focus:border-black"
                value="<%= (typeof first_name === 'undefined') ? '' : first_name %>"
                name="first_name"
                placeholder="Bob"
                id="first_name"
                type="text"
              />
              <% if (typeof errors !== 'undefined') { %> <%
              errors.forEach(function(error) { %> <% if ((typeof error !==
              'undefined') && error.path === 'first_name') { %>
              <span class="text-red-800"><%= error.msg %></span>
              <% } %> <% }); %> <% } %>
            </div>

            <div class="flex flex-col gap-2 text-gray-700">
              <label
                class="after:italic after:content-['(Required)']"
                for="last_name"
                >Last Name
              </label>
              <input
                class="rounded-md border-none p-2 focus:border-solid focus:border-black"
                value="<%= (typeof last_name === 'undefined') ? '' : last_name %>"
                name="last_name"
                id="last_name"
                placeholder="Redmon"
                type="text"
                required
              />
              <% if (typeof errors !== 'undefined') { %> <%
              errors.forEach(function(error) { %> <% if ((typeof error !==
              'undefined') && error.path === 'last_name') { %>
              <span class="text-red-800"><%= error.msg %></span>
              <% } %> <% }); %> <% } %>
            </div>

            <div class="flex flex-col gap-2 text-gray-700">
              <label
                class="after:italic after:content-['(Required)']"
                for="email"
                >Email
              </label>
              <input
                class="rounded-md border-none p-2 focus:border-solid focus:border-black"
                value="<%= (typeof email === 'undefined') ? '' : email %>"
                name="email"
                id="email"
                placeholder="username@example.com"
                type="email"
                required
              />
              <% if (typeof errors !== 'undefined') { %> <%
              errors.forEach(function(error) { %> <% if ((typeof error !==
              'undefined') && error.path === 'email') { %>
              <span class="text-red-800"><%= error.msg %></span>
              <% } %> <% }); %> <% } %>
            </div>

            <div class="flex flex-col gap-2 text-gray-700">
              <label
                class="after:italic after:content-['(Required)']"
                for="password"
                >Password
              </label>
              <input
                class="rounded-md border-none p-2 focus:border-solid focus:border-black"
                value="<%= (typeof password === 'undefined') ? '' : password %>"
                id="password"
                name="password"
                type="password"
                required
              />
              <% if (typeof errors !== 'undefined') { %> <%
              errors.forEach(function(error) { %> <% if ((typeof error !==
              'undefined') && error.path === 'password') { %>
              <span class="text-red-800"><%= error.msg %></span>
              <% } %> <% }); %> <% } %>
            </div>

            <div class="flex flex-col gap-2 text-gray-700">
              <label
                class="after:italic after:content-['(Required)']"
                for="confirm_password"
                >Confirm Password
              </label>
              <input
                class="rounded-md border-none p-2 focus:border-solid focus:border-black"
                value="<%= (typeof confirm_password === 'undefined') ? '' : confirm_password %>"
                name="confirm_password"
                id="confirm_password"
                type="password"
                required
              />
              <% if (typeof errors !== 'undefined') { %> <%
              errors.forEach(function(error) { %> <% if ((typeof error !==
              'undefined') && error.path === 'confirm_password') { %>
              <span class="text-red-800"><%= error.msg %></span>
              <% } %> <% }); %> <% } %>
            </div>

            <button
              class="mt-2 w-[100px] items-center self-center rounded-lg border-[1px] border-solid border-gray-600 bg-white p-2 text-lg text-gray-600 shadow-sm shadow-gray-100 transition-all hover:border-[1px] hover:border-solid hover:border-black hover:text-black"
              type="submit"
            >
              Sign Up
            </button>
          </div>
        </form>
      </div>
    </main>
  </body>
</html>
