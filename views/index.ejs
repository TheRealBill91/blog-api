<!doctype html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/tailwindpresets.css" />
  </head>
  <body
    class="text-3xl flex w-full flex-col min-h-screen items-center justify-center"
  >
    <%- include('header') -%>
    <main
      class="p-8 pt-10 flex-1 w-full flex-col flex items-center justify-center"
    >
      <% if (adminAuth && adminInfo && adminInfo.admin === true) { %>
      <div class="self-start px-4 py-2 rounded-lg bg-gray-200 shadow-sm">
        <p class="memberStatus text-[1rem]">Admin</p>
      </div>
      <% } %>

      <h1 class="text-black">Blog Entries</h1>
      <div class="flex-1"></div>
    </main>
  </body>
</html>
