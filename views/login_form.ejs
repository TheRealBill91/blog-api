<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/normalize.css" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title><%= pageTitle %></title>
  </head>
  <body class="flex min-h-[100dvh] flex-col">
    <%- include('header') -%>
    <main
      class="mb-14 mt-10 flex flex-1 flex-col items-center justify-center px-7 py-4"
    >
      <div
        class="rounded-xl bg-gray-300 px-10 py-6 shadow-md shadow-gray-200 md:min-w-[400px]"
      >
        <h1 class="mb-4 text-center text-2xl font-bold text-gray-700">
          <%= title %>
        </h1>

        <form action="" method="POST">
          <div class="mb-3 flex flex-col gap-4">
            <div class="mx-2 flex flex-col gap-2 text-gray-700">
              <label for="email">Email</label>
              <input
                class="w-full rounded-md p-2"
                value="<%= (typeof email === 'undefined') ? '' : email %>"
                name="email"
                placeholder="username@example.com"
                type="email"
                required
              />
              <% if (typeof errors !== 'undefined') { %> <%
              errors.forEach(function(error) { %> <% if ((typeof error !==
              'undefined') && error.path === 'email') { %>
              <span class="errorMsg"><%= error.msg %></span>
              <% } %> <% }); %> <% } %>
            </div>

            <div class="mx-2 mb-3 flex flex-col gap-2 text-gray-700">
              <label for="password">Password</label>
              <input
                class="w-full rounded-md p-2"
                value="<%= (typeof password === 'undefined') ? '' : password %>"
                name="password"
                id="password"
                type="password"
                required
              />
              <% if (typeof errors !== 'undefined') { %> <%
              errors.forEach(function(error) { %> <% if ((typeof error !==
              'undefined') && error.path === 'password') { %>
              <span class="errorMsg"><%= error.msg %></span>
              <% } %> <% }); %> <% } %>
            </div>

            <button
              class="w-[100px] items-center self-center rounded-lg border-[1px] border-solid border-gray-600 bg-white p-2 text-lg text-gray-600 shadow-sm shadow-gray-100 transition-all hover:border-[1px] hover:border-solid hover:border-black hover:text-black"
              type="submit"
            >
              Login
            </button>
          </div>
        </form>
        <% if (typeof messageFailure !== 'undefined' && messageFailure.length) {
        %>
        <div class="messageFailure"><%= messageFailure %></div>
        <% } %>
      </div>
    </main>
  </body>
</html>
