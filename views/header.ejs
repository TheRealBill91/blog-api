<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/tailwindpresets.css" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Members Only</title>
  </head>
  <body>
    <header class="w-full">
      <div class="headerContainer">
        <h2><a href="/"> Blog Manager </a></h2>
        <div>
          <ul class="navLinksContainer">
            <a href="/users/sign-up">
              <li class="flex justify-center items-center"><button class="max-h-[50px]">sign up</button></li>
            </a>
            <% if ( adminAuth) { %>
            <a href="/logout">
              <li><button class="max-h-[50px]">logout</button></li>
            </a>
            <% } else { %>
            <a href="/login">
              <li><button class="max-h-[50px]">login</button></li>
            </a>
            <% } %>
          </ul>
        </div>
      </div>
    </header>
  </body>
</html>
